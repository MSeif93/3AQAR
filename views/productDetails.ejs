<%- include('partials/header') %>

<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 mx-auto">
        <h1 class="fw-light"><%= product.name %></h1>
        <p class="lead text-body-secondary">
          Product details and images.
        </p>
      </div>
    </div>
  </section>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        
        <img src="/image/<%= product.id %>/image1" alt="Image 1" class="img-fluid" />
        <img src="/image/<%= product.id %>/image2" alt="Image 1" class="img-fluid" />
        <img src="/image/<%= product.id %>/image3" alt="Image 1" class="img-fluid" />
          
        
      </div>
      <div class="col-md-6">
        <h2>Product Details</h2>
        <p><strong>Category:</strong> <%= categoryName %></p>
        <p><strong>Description:</strong> <%= product.description %></p>
        <p><strong>Minimum Price:</strong> $<%= product.minimum_price %></p>
        <p><strong>Created at:</strong> <%= product.created_at %></p>
        <p><strong>Updated at:</strong> <%= product.updated_at %></p>
      </div>
    </div>
  </div>

</main>



