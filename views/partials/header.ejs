<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  </head>
  <body>
    <!-- // Navbar \\ -->
    <nav
      class="navbar navbar-expand-lg navbar border-bottom border-body py-0"
      style="background-color: #dbd9d5"
      data-bs-theme="light"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="/">3AQAR</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Categories
              </a>
              <ul class="dropdown-menu">
                       <% if (categories && categories.length > 0) { %>
                <% for (let category of categories) { %>
                  <li></li><a href="/category/<%= category.id %>" class="dropdown-item">
                    <%= category.name %>
                  </a></li>
                <% } %>
              <% } else { %>
                <p class="text-muted">No categories available</p>
              <% } %>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/post">Submit your 3AQAR</a>
            </li>
          </ul>
          <div class="d-flex">
                 
            <% if (locals.userId) { %>
              <a class="nav-link" href="/profile/<%= userId %>">
                <img src="/profile/<%= userId %>/profile-picture" alt="Profile Picture"/>
                <span><%= userName %></span>
              </a>

            
             <button
              type="button"
              class="btn btn-outline-danger ms-2 btn-sm"
              onclick="window.location.href='/logout'"
            >
              Log Out
            </button>
            <% } else { %>
            <button
              type="button"
              class="btn btn-outline-success ms-2 btn-sm"
              onclick="window.location.href='/login'"
            >
              Log In
            </button>
            <button
              type="button"
              class="btn btn-outline-success ms-2 btn-sm"
              onclick="window.location.href='/register'"
            >
              Register
            </button>
           <% } %>
          </div>
        </div>
      </div>
    </nav>
    <!-- \\ Navbar // -->

